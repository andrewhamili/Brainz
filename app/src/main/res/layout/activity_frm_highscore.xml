<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shamwow.brainz.frm_highscore">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="List of High Scores:"
                android:textSize="40sp"/>


            <TextView
                android:id="@+id/tv_hs_vb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="184dp"
                android:text="VB.Net High Score"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_hs_cisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_hs_ce"
                android:layout_below="@+id/tv_hs_ce"
                android:layout_marginTop="32dp"
                android:text="Cisco High Score"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_hs_mysql"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="MySQL High Score"
                android:textSize="30sp"
                android:layout_below="@+id/tv_hs_vb"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_hs_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:text="Computer Essential High Score"
                android:textSize="30sp"
                android:layout_below="@+id/tv_hs_mysql"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
