<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frm_comp_essential"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shamwow.brainz.frm_comp_essential"
    android:background="@drawable/bg_lyt_computer">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RadioGroup
                android:id="@+id/ce_rg_choices"
                android:layout_width="match_parent"
                android:layout_height="240sp"
                android:layout_above="@+id/ce_btn_submit"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp">

                <RadioButton
                    android:id="@+id/ce_rb_a"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginBottom="10sp"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/ce_rb_b"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginBottom="10sp"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/ce_rb_c"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginBottom="10sp"
                    android:text="RadioButton" />


            </RadioGroup>

            <TextView
                android:id="@+id/ce_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="25sp"
                android:layout_marginBottom="47dp"
                android:layout_above="@+id/ce_rg_choices"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/ce_tv_score"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:layout_marginEnd="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/ce_btn_submit"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:text="Next"
                android:background="@drawable/bg_btn_compessence"
                android:textSize="25sp"
                android:layout_above="@+id/ce_tv_score"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp" />

            <Button
                android:id="@+id/ce_btn_show_answer"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text=""
                android:background="@drawable/bg_btn_compessence"
                android:textSize="25sp"
                android:visibility="visible"
                android:layout_alignBottom="@+id/ce_tv_question"
                android:layout_alignEnd="@+id/ce_tv_score" />

            <TextView
                android:id="@+id/ce_tv_high_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score"
                android:textSize="25sp"
                android:layout_below="@+id/ce_btn_show_answer"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
