<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frm_cisco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shamwow.brainz.frm_cisco"
    android:background="@drawable/gamebackground_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Cisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="36sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68dp" />

            <RadioGroup
                android:id="@+id/cic_rg_choices"
                android:layout_width="300sp"
                android:layout_height="150sp"
                android:layout_below="@+id/cis_tv_question"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp">

                <RadioButton
                    android:id="@+id/cis_rb_a"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/cis_rb_b"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/cis_rb_c"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:text="RadioButton" />


            </RadioGroup>

            <TextView
                android:id="@+id/cis_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="25sp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="76dp" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
